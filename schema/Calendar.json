{
  "title": "RecurrentTrip",
  "description": "Das Objekt beschreibt eine wiederkehrende Fahrt.",
  "type": "object",
  "required": [
    "id",
    "type",
    "url"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "url"
    },
    "type": {
      "type": "string",
      "pattern": "^https\\:\\/\\/schema\\.mmport\\.org\\/1\\.0\\/RecurrentTrip$"
    },
    "created": {
      "description": "Zeitpunkt der Erstellung.",
      "type": "string",
      "format": "date-time"
    },
    "modified": {
      "description": "Zeitpunkt der letzten Änderung.",
      "type": "string",
      "format": "date-time"
    },
    "start": {
      "description": "Beginn der Gültigkeit der angegebenen Wochentage",
      "type": "string",
      "format": "date"
    },
    "end": {
      "description": "Ende der Gültigkeit der angegebenen Wochentage",
      "type": "string",
      "format": "date"
    },
    "weekday": {
      "description": "Tage, an denen die Fahrt angeboten wird, als Liste an ISO 8601 Wochentag-Nummern.",
      "type": "array",
      "items": {
        "type": "integer"
      }
    },
    "trip": {
      "description": "Fahrt",
      "references": "Trip",
      "backreference": "calendar",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "calendarException": {
      "description": "Ausnahmen zu den definierten Tagen",
      "references": "CalendarException",
      "backreference": "calendar",
      "cardinality": "1:n",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    }
  }
}