{
  "title": "Stop",
  "description": "Das Objekt beschreibt die Haltepunkte einer Fahrt.",
  "type": "object",
  "required": [
    "id",
    "type",
    "moment"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "url"
    },
    "type": {
      "type": "string",
      "pattern": "^https\\:\\/\\/schema\\.mmport\\.org\\/1\\.0\\/SingleStop$"
    },
    "created": {
      "description": "Zeitpunkt der Erstellung.",
      "type": "string",
      "format": "date-time"
    },
    "modified": {
      "description": "Zeitpunkt der letzten Änderung.",
      "type": "string",
      "format": "date-time"
    },

    "singleTrip": {
      "description": "Instanzierter Trip, zu welchem der Stop gehört.",
      "references": "SingleTrip",
      "backreference": "stop",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "singleLocation": {
      "description": "Ort.",
      "references": "SingleLocation",
      "backreference": "stop",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "stop": {
      "description": "Noch nicht instanzierter Stop, von dem der SingleStop abgeleitet wurde.",
      "references": "Stop",
      "backreference": "singleStop",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "participationStart": {
      "description": "Einsteigende Teilnahmen",
      "references": "Participation",
      "backreference": "start",
      "cardinality": "1:n",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "participationStop": {
      "description": "Aussteigende Teilnahmen",
      "references": "Participation",
      "backreference": "stop",
      "cardinality": "1:n",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "arrival": {
      "description": "Geplante Ankunftszeit am Stop.",
      "type": "string",
      "format": "date-time"
    },
    "arrivalInaccuracy": {
      "description": "Geplante Ungenauigkeit der Ankunft in Sekunden",
      "type": "integer"
    },
    "departure": {
      "description": "Geplante Abfahrtzeit am Stop.",
      "type": "string",
      "format": "date-time"
    },
    "departureInaccuracy": {
      "description": "Geplante Ungenauigkeit der Abfahrt in Sekunden",
      "type": "integer"
    },
    "boardingAllowed": {
      "description": "Status, ob ein Einsteigen erlaubt ist.",
      "type": "boolean"
    },
    "deboardingAllowed": {
      "description": "Status, ob ein Aussteigen erlaubt ist.",
      "type": "boolean"
    }
  }
}