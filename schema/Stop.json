{
  "title": "Stop",
  "description": "Das Objekt beschreibt einen geplanten, noch nicht instanzierten Haltepunkte einer Fahrt.",
  "type": "object",
  "required": [
    "id",
    "type",
    "moment"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "url"
    },
    "type": {
      "type": "string",
      "pattern": "^https\\:\\/\\/schema\\.mmport\\.org\\/1\\.0\\/Stop$"
    },
    "created": {
      "description": "Zeitpunkt der Erstellung.",
      "type": "string",
      "format": "date-time"
    },
    "modified": {
      "description": "Zeitpunkt der letzten Änderung.",
      "type": "string",
      "format": "date-time"
    },
    "trip": {
      "description": "Mitfahrgelegenheit, zu welchem der Stop gehört.",
      "references": "Trip",
      "backreference": "stops",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "location": {
      "description": "Ort.",
      "references": "Location",
      "backreference": "stop",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "singleStop": {
      "description": "Instanzierter Stop",
      "references": "Stop",
      "backreference": "stop",
      "cardinality": "1:n",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "arrival": {
      "description": "Geplante Ankunftszeit am Stop.",
      "type": "string",
      "format": "date-time"
    },
    "arrivalInaccuracy": {
      "description": "Geplante Ungenauigkeit der Ankunft in Sekunden",
      "type": "integer"
    },
    "departure": {
      "description": "Geplante Abfahrtzeit am Stop.",
      "type": "string",
      "format": "date-time"
    },
    "departureInaccuracy": {
      "description": "Geplante Ungenauigkeit der Abfahrt in Sekunden",
      "type": "integer"
    },
    "boardingAllowed": {
      "description": "Status, ob ein Einsteigen erlaubt ist.",
      "type": "bool"
    },
    "deboardingAllowed": {
      "description": "Status, ob ein Aussteigen erlaubt ist.",
      "type": "bool"
    }
  }
}