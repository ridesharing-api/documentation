{
  "title": "Trip",
  "description": "Das Objekt beschreibt eine abstrakte Fahrt, welche sich wöchentlich wiederholen kann.",
  "type": "object",
  "required": [
    "id",
    "type",
    "url"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "url"
    },
    "type": {
      "type": "string",
      "pattern": "^https\\:\\/\\/schema\\.mmport\\.org\\/1\\.0\\/SingleTrip$"
    },
    "created": {
      "description": "Zeitpunkt der Erstellung.",
      "type": "string",
      "format": "date-time"
    },
    "modified": {
      "description": "Zeitpunkt der letzten Änderung.",
      "type": "string",
      "format": "date-time"
    },
    "route": {
      "description": "Abstrakte Route, mit der eine oder mehrere Fahrten zusammengefasst werden.",
      "references": "Route",
      "backreference": "trip",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "car": {
      "description": "Fahrzeug",
      "references": "Car",
      "backreference": "trip",
      "cardinality": "n:1",
      "type": "string",
      "format": "url"
    },
    "backTrip": {
      "description": "Der in die exakt entgegengesetzte Richtung laufende Trip, also die Rückfahrt.",
      "references": "Trip",
      "backreference": "backTrip",
      "cardinality": "1:1",
      "type": "string",
      "format": "url"
    },
    "stop": {
      "description": "Haltepunkte",
      "references": "Stop",
      "backreference": "trip",
      "cardinality": "1:n",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "singleTrip": {
      "description": "Die Instanzierungen des abstrakten Trips.",
      "references": "SingleTrip",
      "backreference": "trip",
      "cardinality": "1:n",
      "type": "array",
      "items": {
        "type": "string",
        "format": "url"
      }
    },
    "active": {
      "description": "Zeigt an, ob die Fahrt aktuell aktiv ist.",
      "type": "boolean"
    },
    "published": {
      "description": "Zeitpunkt der Veröffentlichung.",
      "type": "string",
      "format": "date-time"
    },
    "expired": {
      "description": "Zeitpunkt, ab welchem das Angebot nicht mehr gültig ist.",
      "type": "string",
      "format": "date-time"
    },
    "seats": {
      "description": "Anzahl der Sitze",
      "type": "integer",
      "minimum": 1
    },
    "boardingMinimum": {
      "description": "Mindestanteil der Fahrt, die ein Mitfahrender dabei sein muss.",
      "type": "float",
      "exclusiveMinimum": 0,
      "maximum": 1
    },
    "boardingAllowedFrom": {
      "description": "Anteil der Fahrt, bis zu dem Aussteigen nicht erlaubt ist.",
      "type": "float",
      "minimum": 0,
      "exclusiveMaximum": 1
    },
    "boardingAllowedTill": {
      "description": "Anteil der Fahrt, ab dem kein Zusteigen mehr erlaubt ist.",
      "type": "float",
      "exclusiveMinimum": 0,
      "maximum": 1
    },
    "nonsmoking": {
      "description": "Nichtraucher-Fahrt.",
      "type": "boolean"
    },
    "bike": {
      "description": "Fahrrad-Mitnahme.",
      "type": "boolean"
    },
    "ageFrom": {
      "description": "Mindestalter der MitfahrerInnen, numerischer Wert.",
      "type": "integer"
    },
    "ageTill": {
      "description": "Maximales Alter der MitfahrerInnen, numerischer Wert.",
      "type": "integer"
    },
    "gender": {
      "description": "Geschlecht der MitfahrerInnen",
      "type": "string",
      "enum": [
        "male",
        "female",
        "any"
      ]
    },
    "website": {
      "description": "Öffentlicher Link auf das Angebot (Deeplink).",
      "type": "string",
      "format": "url"
    }
  }
}